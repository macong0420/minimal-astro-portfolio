---
import Section from "../components/ui/Section.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../components/layout/BaseLayout.astro";
import ContentList from "../components/shared/ContentList.astro";
import Container from "../components/ui/Container.astro";

const formatDate = (date: Date | undefined) => {
  if (!date) return "";
  return date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
  });
};

const posts = await getCollection("blog", ({ data }: CollectionEntry<"blog">) => {
  return import.meta.env.PROD ? !data.draft : true;
});
const latestPosts = posts
  .sort(
    (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
      b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
  )
  .slice(0, 3);

const projects = await getCollection("projects");
const featuredProjects = projects.filter((project: CollectionEntry<"projects">) => project.data.featured).slice(0, 3);
---

<BaseLayout title="Mr.C - 客户端开发工程师" description="个人网站和博客">
  <Container>
    <section class="hero">
      <h1>Mr.C</h1>
      <p class="subtitle">客户端开发工程师 & 技术爱好者</p>
      
      <div class="intro">
        <p>
          你好！我是一名客户端开发工程师，负责架构设计和核心功能开发。主要从事 iOS、Flutter 和前端开发工作，热衷于探索新技术，追求代码质量和用户体验的完美统一。
        </p>
        <p>
          我的技术栈包含 iOS、Flutter 和前端开发，能够独立完成移动端和 Web 端的项目开发。
        </p>
      </div>

      <div class="social-links">
        <a href="https://github.com/macong0420" target="_blank">GitHub</a>
        <a href="https://x.com/Snipercccc" target="_blank">Twitter</a>
      </div>
    </section>

    <Section>
      <div class="section-header">
        <h2>Blog</h2>
        <a href="/blog">View all posts</a>
      </div>
      <ContentList>
        {
          latestPosts.map((post) => (
            <article>
              <div class="title-row">
                <a href={`/blog/${post.id}`}>{post.data.title}</a>
                {post.data.publishedAt && (
                  <time datetime={post.data.publishedAt.toISOString()}>{formatDate(post.data.publishedAt)}</time>
                )}
              </div>
              <p class="muted-text">{post.data.description}</p>
            </article>
          ))
        }
      </ContentList>
    </Section>

    <section class="section">
      <div class="section-header">
        <h2>Projects</h2>
        <a href="/projects">View all projects</a>
      </div>
      <ContentList>
        {
          featuredProjects.map((project) => (
            <article>
              <div class="title-row">
                <a href={project.data.url} target="_blank" rel="noopener noreferrer">
                  {project.data.title}
                </a>
              </div>
              <p class="muted-text">{project.data.description}</p>
              {project.data.techs && (
                <div class="tags">
                  {project.data.techs.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </ContentList>
    </section>
  </Container>
</BaseLayout>

<style>
  main {
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .hero {
    padding: 4rem 0;
    max-width: 65ch;
  }

  .intro {
    margin: 1rem 0 2rem;
    line-height: 1.6;
  }
  
  .intro p {
    margin-bottom: 1rem;
  }

  .section {
    margin: 4rem 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 2rem;
  }

  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    font-size: var(--text-sm);
  }

  time {
    font-size: var(--text-xs);
    color: var(--text-muted);
    white-space: nowrap;
  }

  .tags {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .tags span {
    font-size: var(--text-xs);
    color: var(--text-muted);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: var(--link-color);
    text-decoration: none;
    position: relative;
  }

  .social-links a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: currentColor;
    transition: width var(--transition-base);
  }

  .social-links a:hover::after {
    width: 100%;
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem 0;
    }

    .hero {
      padding: 3rem 0;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>
